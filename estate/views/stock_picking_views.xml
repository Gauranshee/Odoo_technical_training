<odoo>

    <!-- Inherit Form View -->
    <record id="view_picking_form_inherit_delivery_note" model="ir.ui.view">
        <field name="name">stock.picking.form.inherit.delivery.note</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='origin']" position="after">
                <field name="delivery_note_no"/>
            </xpath>

        </field>
    </record>


<!--    Inherit tree view-->

        <record id="view_picking_tree_inherit_delivery_note" model="ir.ui.view">
        <field name="name">stock.picking.tree.inherit.delivery.note</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.vpicktree"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='scheduled_date']" position="after">
                <field name="delivery_note_no"/>
            </xpath>

        </field>
    </record>
</odoo>