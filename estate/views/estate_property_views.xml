<odoo>
    <record id="estate_property_form_view" model="ir.ui.view">
        <field name="name">estate.property.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form>
                <sheet>

                    <h1>
                        <field name="name"/>
                        <field name="state" widget="statusbar"/>
                        <field name="garden_orientation" widget="radio"/>
                        <button name="action_sold" string="Sold" type="object" invisible="state in ['sold','cancel']"/>
                        <button name="action_cancelled" string="Cancel" type="object" invisible="state in ['sold','cancel']"/>
                    </h1>
                    <groups>
                        <group>
                            <field name="postcode"/>
                            <field name="date_availability"/>
                            <field name="garden_area" invisible="not garden"/>
                            <field name="garden_orientation" invisible="not garden"/>
                        </group>
                        <group>
                            <field name="expected_price"/>
                            <field name="selling_price"/>
                        </group>
                    </groups>
                    <notebook>
                        <page string="Description">
                            <field name="description"/>
                            <group>
                                <group>
                                    <field name="bedrooms"/>
                                    <field name="living_area"/>
                                    <field name="property_type_id" options="{'no_create':True,'no_edit':True}"/>
                                    <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                                </group>
                                <group>
                                    <field name="garage"/>
                                    <field name="garden"/>
                                    <field name="total_area"/>
                                    <field name="best_price"/>
                                </group>
                                <group>
                                    <field name="garden_area"/>
                                    <field name="tag_ids" widget="many2many_tags"/>
                                </group>
                            </group>
                        </page>
                        <page string="Offer">
                            <field name="offer_ids" readonly="state in ['offer_accepted','sold','cancel']">
                                <tree editable="bottom">
                                    <field name="price"/>
                                    <field name="partner_id"/>
                                    <field name="validity"/>
                                    <field name="date_deadline"/>
                                    <field name="state"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>



    <record id="estate_property_tree_view" model="ir.ui.view">
        <field name="name">estate.property.tree</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <tree decoration-success="state == 'offer_received'"
            decoration-bf="state == 'offer_accepted'"
            decoration-muted="state == 'sold'">
                <field name="name" string="Title"/>
                <field name="state" invisible="1"/>
                <field name="postcode" string="Postcode"/>
                <field name="bedrooms" string="Bedrooms"/>
                <field name="living_area" string="Living_area"/>
                <field name="expected_price" string="Expected_Price" optional="show"/>
                <field name="selling_price" string="Selling_Price"/>
                <field name="date_availability" string="Date_Availability"/>
            </tree>
        </field>

    </record>
    <record id="action_estate_property" model="ir.actions.act_window">
        <field name="name">Properties</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="estate_property_search_view" model="ir.ui.view">
        <field name="name">estate.property.view.search</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="postcode"/>
                <field name="expected_price"/>
                <field name="bedrooms"/>
                <field name="living_area" filter_domain="[('living_area','>=',selfx)]"/>
                <field name="facades"/>
                <filter name="filter_new" string="New properties" domain="[('state','=','new')]"/>
                <filter name="filter_offer_received" string="Offer Received" domain="[('state','=','offer_received')]"/>
                <filter name="group_by_postcode" string="Postcode" context="{'group_by': 'postcode'}"/>
                <filter name="available" string="Available" domain="[('state','=','new')]"/>

            </search>
        </field>
    </record>

<!--action-->
    <record id="action_property_type" model="ir.actions.act_window">
        <field name="name">Property Type</field>
        <field name="res_model">estate.property.type</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_available': True}</field>
    </record>

<!--tree view-->
    <record id="estate_property_type_tree" model="ir.ui.view">
        <field name="name">estate.property.type.tree</field>
        <field name="model">estate.property.type</field>
        <field name="arch" type="xml">
                <tree>
                    <field name="sequence" widget="handle"/>
                    <field name="name"/>
                </tree>
        </field>
    </record>

<!--    form view-->

    <record id="estate_property_type_form" model="ir.ui.view">
        <field name="name">estate.property.type.form</field>
        <field name="model">estate.property.type</field>
        <field name="arch" type="xml">
                <form>
                    <sheet>
                        <header>
                            <div class="oe_button_box" name="button_box">
                                <button name="%(estate_property_offer_action)d" type="action" class="oe_stat_buttton" icon="fa-money">
                                    <field name="offer_count" widget="statinfo"/>
                                </button>
                            </div>
                        </header>
                    </sheet>
                    <sheet>
                        <group>
                            <field name="name"/>
                        </group>
                        <field name="property_ids">
                            <tree>
                                <field name="name"/>
                                <field name="expected_price"/>
                                <field name="state"/>
                            </tree>
                        </field>
                    </sheet>
                </form>
        </field>
    </record>

<!--    search view-->

    <record id="estate_property_type_search" model="ir.ui.view">
        <field name="name">estate.property.type.search</field>
        <field name="model">estate.property.type</field>
        <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                </search>
        </field>
    </record>

<!--    action view for property offer-->

    <record id="estate_property_offer_action" model="ir.actions.act_window">
        <field name="name">Offers</field>
        <field name="domain">[]</field>
        <field name="res_model">estate.property.offer</field>
        <field name="view_mode">tree,form</field>
    </record>

<!--tree view for property offer-->
     <record id="estate_property_offer_tree" model="ir.ui.view">
        <field name="name">estate.property.offer.tree</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
                <tree editable="bottom"
                decoration-danger="state == 'refused'"
                decoration-success="state == 'state_accepted'">
                    <field name="property_id"/>
                    <field name="property_type_id"/>
                    <field name="price"/>
                    <field name="partner_id"/>
                    <field name="state" invisible="1"/>
                    <field name="validity"/>
                    <field name="date_deadline"/>
                    <button icon="fa-check" type="object" name="action_accept" title="Accept offer"/>
                    <button icon="fa-times" type="object" name="action_refuse" title="Reject offer"/>
                </tree>
        </field>
     </record>

<!--    form view of property offer-->
    <record id="estate_property_offer_form" model="ir.ui.view">
        <field name="name">estate.property.offer.form</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
                <form>
                    <sheet>
                        <h1>
                            <field name="state" invisible="1"/>
                            <button name="action_accept" string="Accept" type="object" invisible="state in ['accepted','refused']"/>
                            <button name="action_refuse" string="Refuse" type="object" invisible="state in['accepted','refused']"/>
                        </h1>
                        <group>
                            <field name="price"/>
                            <field name="partner_id"/>
                            <field name="state"/>
                            <field name="validity"/>
                            <field name="date_deadline"/>
                        </group>
                    </sheet>
                </form>
        </field>
    </record>


<!--    action for many2many-->
    <record id="estate_property_tag_action" model="ir.actions.act_window">
        <field name="name">Property Tags</field>
        <field name="res_model">estate.property.tag</field>
        <field name="view_mode">tree,form</field>
    </record>


<!--    tree view for many2many-->
    <record id="estate_property_tag_tree" model="ir.ui.view">
        <field name="name">estate.property.tag.tree</field>
        <field name="model">estate.property.tag</field>
        <field name="arch" type="xml">
                <tree editable="bottom">
                    <field name="name"/>
                </tree>
        </field>
    </record>

<!--    Model inheritance file Class inheritance-->
<!--    used XPATH bcz,users form already exists,we inject new tab-->

    <record id="view_users_form_inherit_estate" model="ir.ui.view">
        <field name="name">res.users.form.inherit.estate</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="Properties">
                    <field name="property_ids"/>
                    <tree>
                        <field name="name"/>
                        <field name="state"/>
                    </tree>
                </page>
            </xpath>
        </field>
    </record>










</odoo>